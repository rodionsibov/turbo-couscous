---
const { tags } = Astro.props;
---

<div class="flex flex-col gap-2">
  {
    tags.map((tag: string) => (
      <p class="border bg-blue-50 dark:bg-blue-100 text-black rounded-md px-2 border-blue-200 w-fit">
        <a
          class="text-sm hover:underline opacity-70 hover:opacity-100"
          href={`/tags/${tag}`}
        >
          {tag}
        </a>
      </p>
    ))
  }
</div>
